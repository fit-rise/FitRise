generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Socket {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model users {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
  age   Int
  height Int
  weight Int
  ex_level Level @default(MIDDLE)
  ex_goal String
  exp Int
  plans Plans[]
}


model Plans{
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  day DateTime
  name String
  sets Int
  reps Int
  userId  String   @db.ObjectId
  user    users    @relation(fields: [userId], references: [id])
}

enum Level {
  HIGH
  MIDDLE
  LOW
}

